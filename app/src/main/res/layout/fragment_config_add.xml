<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragment.ConfigAddFragment">

    <EditText
        android:id="@+id/et_z_add_size"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:fontFamily="@font/bmdohyeon"
        android:hint="염전크기를 입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tv_zadd"
        app:layout_constraintStart_toEndOf="@+id/tv_zadd"
        app:layout_constraintTop_toTopOf="@+id/tv_zadd" />

    <Button
        android:id="@+id/btn_add_cofig"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bmdohyeon"
        android:text="추가하기"
        android:textSize="18sp"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_k_add_size" />

    <TextView
        android:id="@+id/tv_zadd"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:background="#FEFCDA"
        android:fontFamily="@font/bmdohyeon"
        android:gravity="center"
        android:text="증발지"
        android:textColor="#FDB83B"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/tv_kadd"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="#EEF6FB"
        android:fontFamily="@font/bmdohyeon"
        android:gravity="center"
        android:text="결정지"
        android:textColor="#7DBDFE"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="@+id/tv_zadd"
        app:layout_constraintTop_toBottomOf="@+id/tv_zadd" />

    <EditText
        android:id="@+id/et_k_add_size"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:fontFamily="@font/bmdohyeon"
        android:hint="염전크기를 입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tv_kadd"
        app:layout_constraintStart_toEndOf="@+id/tv_kadd"
        app:layout_constraintTop_toTopOf="@+id/tv_kadd" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edge"
        android:fontFamily="@font/bmdohyeon"
        android:gravity="center_vertical"
        android:text="신규 정보 등록"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="255dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/salt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />


</androidx.constraintlayout.widget.ConstraintLayout>
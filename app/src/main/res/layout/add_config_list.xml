<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_z_place_size"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#FEFCDA"
        android:fontFamily="@font/bmdohyeon"
        android:gravity="center"
        android:text="증발지크기"
        app:layout_constraintStart_toEndOf="@+id/tv_z_numbering"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_k_numbering"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:background="#EEF6FB"
        android:fontFamily="@font/bmdohyeon"
        android:gravity="center"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_k_place_size"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#EEF6FB"
        android:fontFamily="@font/bmdohyeon"
        android:gravity="center"
        android:text="결정지크기"
        app:layout_constraintStart_toEndOf="@+id/tv_k_numbering"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_z_numbering"
        android:layout_width="40dp"
        android:layout_height="80dp"
        android:background="#FEFCDA"
        android:fontFamily="@font/bmdohyeon"
        android:gravity="center"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/tv_k_place_size"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#EEF6FB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_z_place_size"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#7DBDFE"
        android:fontFamily="@font/bmdohyeon"
        android:text="염전삭제"
        app:layout_constraintStart_toStartOf="@+id/tv_z_place_size"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>